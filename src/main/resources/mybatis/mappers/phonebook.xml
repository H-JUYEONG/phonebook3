<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="phonebook">

	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[     
			delete from person
			where person_id = #{personId}
		]]>
	</delete>


	<!-- 저장 -->
	<insert id="insert" parameterType="com.javaex.vo.PersonVo">
		<![CDATA[   
			insert into person
			values(null, #{name}, #{hp}, #{company})
		]]>
	</insert>


	<!-- 전체 가져오기 -->
	<!-- 파라미터 타입이 필요없음. 다만 ~번 가져와. 할때는 파라미터 타입을 써준다. -->
	<!--리스트만 resultTyep 쓴다. 자기가 혼자 리스트 만들어서 애드까지함-->
	<!-- 사람정보가져올때는 그냥 Vo주소를 파라미터에 넣기 -->
	<select id="selectList" resultType="com.javaex.vo.PersonVo">
		<![CDATA[ 
			select 	person_id as personId,
					name,   
			        hp,     
			        company  
			from person
		]]>
	</select>
	<!--setPerson_id() 얘가 찾는건 이거임  그래서 id 출력이 안될거임   setPersonId()-이게 우리 dao에 있는 정보
		setName()
		setHp()
		setCompany()-->

	<!-- 1명 정보 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.PersonVo">
		<![CDATA[
			select    person_id as personId,
      				  name,
       				  hp,
       				  company
			from person
			where person_id =#{no}
		]]>
	</select>


	<!-- 수정 -->
	<update id="update" parameterType="com.javaex.vo.PersonVo">
	<![CDATA[
	
		 	update person
    		set    name = #{name},
			       hp = #{hp},
        		   company = #{company}
			       where person_id = #{personId}
	]]>
	</update>

</mapper>